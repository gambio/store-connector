{
	"name": "gambio-store/store-connector",
	"description": "The Store Connector module enables the integration of Gambio Store into Gambio GX shops.",
	"type": "project",
	"license": "GPL-2.0",
	"scripts": {
		"coverage": "php vendor/bin/phpunit --coverage-html docs/coverage",
		"metrics": "php vendor/phpmetrics/phpmetrics/bin/phpmetrics --report-html=./docs/metrics ./src",
		"lint": "mkdir -p docs/lint && php vendor/bin/phpcs src > docs/lint/lint.txt"
	},
	"authors": [
		{
			"name": "Gambio GmbH",
			"email": "info@gambio.de"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=5.6.0",
		"ext-json": "*",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
	    "roave/security-advisories": "dev-master",
	    "phpunit/phpunit": "^7",
	    "mikey179/vfsStream": "^1.6",
	    "fzaninotto/faker": "^1.6",
	    "phpmetrics/phpmetrics": "^2.7",
		"squizlabs/php_codesniffer": "^3.5"
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^7",
        "mikey179/vfsStream": "^1.6",
        "fzaninotto/faker": "^1.6",
        "theseer/phpdox": "^0.12.0"
    }
}
